{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
  "types": ["nuxt", "@nuxt/schema", "node"],
    "skipLibCheck": true,
    "strict": false
  },
  "exclude": ["node_modules", ".nuxt"]
}
